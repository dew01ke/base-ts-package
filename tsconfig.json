{
  "compilerOptions": {
    "target": "ES2018",
    "module": "esnext",
    "jsx": "react",
    "lib": [
      "dom"
    ],
    "sourceMap": true,
    "moduleResolution": "node",
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
